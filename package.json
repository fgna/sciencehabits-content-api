{
  "name": "sciencehabits-content-api",
  "version": "2.0.0",
  "description": "Private content API for ScienceHabits application with GitHub Pages hosting",
  "private": true,
  "main": "src/api/index.html",
  "scripts": {
    "dev": "python3 -m http.server 8000 --directory src/api",
    "validate": "node src/scripts/validate-content.js",
    "validate:all": "npm run validate && npm run validate:schemas && npm run validate:translations",
    "validate:schemas": "node src/scripts/validate-schemas.js",
    "validate:translations": "node src/scripts/validate-translations.js",
    "test": "npm run test:content && npm run test:api",
    "test:content": "node tests/content-validation/test-content.js",
    "test:api": "node tests/api-tests/test-endpoints.js",
    "test:integration": "node tests/integration-tests/test-integration.js",
    "build": "node src/scripts/build-api.js",
    "build:staging": "node src/scripts/build-api.js --environment=staging",
    "build:production": "node src/scripts/build-api.js --environment=production",
    "deploy:staging": "npm run build:staging && npm run test && gh-pages -d staging --dest staging",
    "deploy:production": "npm run build:production && npm run test && gh-pages -d production",
    "add:habit": "node src/scripts/add-habit.js",
    "add:research": "node src/scripts/add-research.js",
    "generate:stats": "node src/scripts/generate-stats.js",
    "check:health": "node src/scripts/health-check.js",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write src/**/*.{js,json}",
    "security:scan": "npm audit && node src/scripts/security-scan.js"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "chalk": "^4.1.2",
    "node-fetch": "^2.6.12"
  },
  "devDependencies": {
    "eslint": "^8.45.0",
    "gh-pages": "^6.0.0",
    "prettier": "^3.0.0",
    "jest": "^29.6.0"
  },
  "keywords": [
    "content-api",
    "github-pages",
    "sciencehabits",
    "habits",
    "research",
    "multi-language"
  ],
  "author": "ScienceHabits Team",
  "license": "PRIVATE",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/sciencehabits-content-api.git"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}